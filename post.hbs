{{!< default}}
{{> header}}

<section class="page-content primary" role="main">

	{{#post}}

		<article id="post-{{id}}" class="post {{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">

			<div class="post-thumbnail">
		    	<img src="{{image}}">
		    </div>

		    <div class="content-wrapper">
			    <h2 class="post-title">
			    	{{title}}
			    </h2>

			    <div class="post-meta">
					Posted on
					<span datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
						{{date format='MMMM Do, YYYY'}}
					</span>
					<!--{{#if author}}
						by {{author.name}}
					{{/if}}
		            {{#if tags}}
		            	<div class="post-tags">
		            		Tags:
		                    {{#foreach tags}}
			                    <span class="post-tag">{{name}}</span>,
		                    {{/foreach}}
		                </div>
		            {{/if}}-->
				</div>

			    <div class="post-content" itemprop="articleBody">

					{{content}}
					
					<hr/>
					
					<div class="post-share">
						<p>If you enjoyed reading this post, have comments about it or think others might find value in the work, I'd love if you would share among friends:</p>
						  <ul class="actions">
							<li class="share"><a href="https://twitter.com/intent/tweet?text={{title}}+-+http%3A%2F%2Fstaticmade.com{{{url}}}+via+%40StaticMade">Twitter</a></li>
							<li class="share"><a href="https://www.facebook.com/sharer/sharer.php?u=http://staticmade.com{{{url}}}">Facebook</a></li>
							<li class="share"><a href="https://news.ycombinator.com/submitlink?u=http://staticmade.com{{{url}}}">Hacker News</a></li>
							<li class="share"><a href="mailto:EMAIL_ADDRESS?subject=Link from Static Made&body=http://staticmade.com{{{url}}}">Email this Post</a></li>
						  </ul>

				</div>

